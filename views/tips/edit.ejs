<% include ../partials/header %>
    <div class="row">
        <h1 style= "text-align: center">Edit: <strong><%=tip.name %></strong></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tips/<%=tip._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=tip.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=tip.image %>">
                </div>
                <div class= "form-group">
                    <input class="form-control" type="text" name="input" value="<%=tip.input%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">UPDATE</button>
                </div>
            </form>
            <a href="/tips">Return</a>
        </div>
    </div>
